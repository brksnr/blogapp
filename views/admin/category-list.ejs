<!DOCTYPE html>
<html lang="en">
<head>
<%- include('../partials/head.ejs') %>
</head>
<body>
        <%- include('../partials/nav.ejs') %>
    <div class="container mt-3">
        <div class="row">
            <div class="cold-md-12 mt-3">
                <% if (action != "undefined" && action == "edit") { %>
                    <div class="alert alert-success">
                       <%= categoryid %> Id numaralı kategori başarıyla güncellendi.
                    </div>
                <% } %>
                <% if (action != "undefined" && action == "create") { %>
                    <div class="alert alert-success">
                        Kategori başarıyla eklendi.
                    </div>
                <% } %>
                <% if (action != "undefined" && action == "delete") { %>
                    <div class="alert alert-danger">
                        Kategori başarıyla silindi.
                    </div>
                <% } %>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th style="width: 50px">id</th>
                            <th>name</th>
                            <th style="width: 130px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(category => { %>
                         <tr>
                            <td>#<%= category.dataValues.id %></td>
                            <td>
                                <%= category.dataValues.name %>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-primary" href="/admin/categories/<%= category.dataValues.id %>">Edit</a>
                                <a class="btn btn-sm btn-danger" href="/admin/category/delete/<%= category.dataValues.id %>">Delete</a>
                            </td>
                         </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>


